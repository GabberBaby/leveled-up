<Window x:Class="LeveledUp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Leveled Up" Height="377" Width="525">
    <Grid Margin="0,0,0,0" Height="322" VerticalAlignment="Top">
        <Label Content="Monitor this folder:" HorizontalAlignment="Left" Margin="29,20,0,0" VerticalAlignment="Top"/>

        <Button Name="StartStopButton" Content="Start" HorizontalAlignment="Left" Margin="385,154,0,0" VerticalAlignment="Top" Width="75" Click="StartStopButton_Click"/>
        <TextBox Name="FolderBox" HorizontalAlignment="Left" Height="23" Margin="29,48,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="431"/>
        <Button Name="OpenFolderButton" Content="..." HorizontalAlignment="Left" Margin="465,48,0,0" VerticalAlignment="Top" Width="25" Height="23" Click="OpenFolderButton_Click"/>
        <Label Content="When these file types change:" HorizontalAlignment="Left" Margin="29,88,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FileTypeFilterBox" HorizontalAlignment="Left" Height="23" Margin="29,114,0,0" TextWrapping="Wrap" Text="*.js|*.cshtml|*.css" VerticalAlignment="Top" Width="431"/>
        <TextBox Name="LogBox" HorizontalAlignment="Left" Height="128" Margin="29,194,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="431" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

    </Grid>
</Window>
