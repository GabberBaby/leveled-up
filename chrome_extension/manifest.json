{
  "manifest_version": 2,
  "name": "LeveledUp Auto-Reload",
  "description": "This extension automatically reloads the browser when the contents of a folder change.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs", "http://*/*", "notifications"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}